<div class="container my-5">
    <div class="bg-primary p-4 rounded shadow-lg text-white">
        <h2 class="text-center mb-4">Iniciar Sesión</h2>

        <form id="loginForm" action="/login" method="POST" class="shadow-lg p-4 rounded bg-light">
            <!-- Correo o Nombre de Usuario -->
            <div class="mb-3">
                <label for="usernameOrEmail" class="form-label">Correo o Nombre de Usuario</label>
                <input type="text" class="form-control" id="usernameOrEmail" name="usernameOrEmail" required placeholder="Ingresa tu correo o nombre de usuario">
            </div>

            <!-- Contraseña -->
            <div class="mb-3">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" required placeholder="Ingresa tu contraseña">
            </div>

            <!-- Mensaje de Error -->
            <div id="errorMessage" class="alert alert-danger d-none" role="alert">
                Credenciales incorrectas. Por favor, intenta de nuevo.
            </div>

            <!-- Botón de Iniciar Sesión -->
            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn btn-primary btn-lg">Iniciar Sesión</button>
                <a href="/Account/Register" class="btn btn-link">¿No tienes cuenta? Regístrate</a>
            </div>
        </form>
    </div>
</div>

