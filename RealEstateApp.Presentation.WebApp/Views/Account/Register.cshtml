@model RealEstateApp.Application.Dtos.Account.UserRegisterDTO

@{
ViewData["Title"] = "Registro";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg border-0" style="max-width: 800px; border-radius: 15px;">
        <div class="card-body p-5">
            <h2 class="text-center mb-4 text-success">
                <i class="fas fa-user-plus"></i> Crea tu Cuenta
            </h2>

          

            <form id="registrationForm" asp-action="Register" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <!-- Mensaje de validaciones generales -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label for="firstName" class="form-label fw-bold">Nombre</label>
                        <input type="text" id="firstName" name="FirstName" class="form-control border-success" value="@Model.FirstName" placeholder="Ingresa tu nombre">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="lastName" class="form-label fw-bold">Apellido</label>
                        <input type="text" id="lastName" name="LastName" class="form-control border-success" value="@Model.LastName" placeholder="Ingresa tu apellido">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label for="phone" class="form-label fw-bold">Teléfono</label>
                        <input type="tel" id="phone" name="PhoneNumber" class="form-control border-success" value="@Model.PhoneNumber" placeholder="Ingresa tu teléfono">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="photo" class="form-label fw-bold">Foto de Perfil</label>
                        <input type="file" id="photo" name="Photo" class="form-control border-success" accept=".jpg, .png">
                        <small class="text-muted">Solo formatos JPG o PNG. Tamaño máximo: 1 imagen.</small>
                        <span asp-validation-for="Photo" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label for="username" class="form-label fw-bold">Nombre de Usuario</label>
                        <input type="text" id="username" name="Username" class="form-control border-success" value="@Model.UserName" placeholder="Elige tu nombre de usuario">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="email" class="form-label fw-bold">Correo Electrónico</label>
                        <input type="email" id="email" name="Email" class="form-control border-success" value="@Model.Email" placeholder="Ingresa tu correo electrónico">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label for="password" class="form-label fw-bold">Contraseña</label>
                        <input type="password" id="password" name="Password" class="form-control border-success" placeholder="Ingresa tu contraseña">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="confirmPassword" class="form-label fw-bold">Confirmar Contraseña</label>
                        <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control border-success" placeholder="Confirma tu contraseña">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="role" class="form-label fw-bold">Tipo de Usuario</label>
                    <select id="role" name="Role" class="form-select border-success" required>
                        <option value="Client">Cliente</option>
                        <option value="Agent">Agente</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100 btn-lg mt-3">
                    <i class="fas fa-check-circle"></i> Registrarme
                </button>

                <div class="text-center mt-4">
                    <p class="small text-muted">¿Ya tienes una cuenta?
                        <a href="/Account/Login" class="text-success fw-bold">Inicia Sesión</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f3f4f6;
        font-family: 'Poppins', sans-serif;
    }

    .card {
        background: #ffffff;
        border-radius: 15px;
    }

    .btn-success {
        background-color: #4CAF50;
        border: none;
        transition: background-color 0.3s ease;
    }

    .btn-success:hover {
        background-color: #45a049;
    }

    .form-control, .form-select {
        border-radius: 10px;
        padding: 10px;
        font-size: 1rem;
    }

    .text-danger {
        font-size: 0.875rem;
    }
</style>
