@model RealEstateApp.Application.Dtos.Dashboard.DashboardDTO

<div class="container mt-5">
    <div class="row">
        <!-- Tarjeta para Propiedades Disponibles -->
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border-primary shadow-lg">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-container bg-primary text-white p-3 rounded-circle me-3">
                            <i class="fas fa-home fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title text-primary">Propiedades Disponibles</h5>
                            <p class="card-text fs-4">@Model.AvailableProperties</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Propiedades Vendidas -->
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border-success shadow-lg">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-container bg-success text-white p-3 rounded-circle me-3">
                            <i class="fas fa-check-circle fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title text-success">Propiedades Vendidas</h5>
                            <p class="card-text fs-4">@Model.SoldProperties</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Agentes Activos -->
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border-warning shadow-lg">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-container bg-warning text-dark p-3 rounded-circle me-3">
                            <i class="fas fa-users fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title text-warning">Agentes Activos</h5>
                            <p class="card-text fs-4">@Model.ActiveAgents</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Tarjeta para Agentes Inactivos -->
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border-danger shadow-lg">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-container bg-danger text-white p-3 rounded-circle me-3">
                            <i class="fas fa-user-slash fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title text-danger">Agentes Inactivos</h5>
                            <p class="card-text fs-4">@Model.InactiveAgents</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Clientes Activos -->
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border-info shadow-lg">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-container bg-info text-white p-3 rounded-circle me-3">
                            <i class="fas fa-users fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title text-info">Clientes Activos</h5>
                            <p class="card-text fs-4">@Model.ActiveClients</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjeta para Clientes Inactivos -->
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border-secondary shadow-lg">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-container bg-secondary text-white p-3 rounded-circle me-3">
                            <i class="fas fa-user-times fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title text-secondary">Clientes Inactivos</h5>
                            <p class="card-text fs-4">@Model.InactiveClients</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Tarjeta para Desarrolladores Activos -->
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card border-success shadow-lg">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="icon-container bg-success text-white p-3 rounded-circle me-3">
                            <i class="fas fa-hard-hat fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title text-success">Desarrolladores Activos</h5>
                            <p class="card-text fs-4">@Model.ActiveDevelopers</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card border-danger shadow-lg">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                        <div class="icon-container bg-danger text-white p-3 rounded-circle me-3">
                            <i class="fas fa-user-times fa-lg"></i>
                            </div>
                            <div>
                                <h5 class="card-title text-danger">Desarrolladores Inactivos</h5>
                                <p class="card-text fs-4">@Model.InactiveDevelopers</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>