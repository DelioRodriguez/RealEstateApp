@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RealEstateApp.Application.Dtos.Admin.AdminDto

<div class="container">


    <form method="post">

        <!-- First Name -->
        <div class="form-group mb-3">
            <label asp-for="FirstName" class="d-flex align-items-center">
                <i class="fas fa-user-tag me-2"></i> Nombre
            </label>
            <input asp-for="FirstName" class="form-control" placeholder="Ingresa el nombre" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <!-- Last Name -->
        <div class="form-group mb-3">
            <label asp-for="LastName" class="d-flex align-items-center">
                <i class="fas fa-user me-2"></i> Apellido
            </label>
            <input asp-for="LastName" class="form-control" placeholder="Ingresa el apellido" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-group mb-3">
            <label asp-for="Email" class="d-flex align-items-center">
                <i class="fas fa-envelope me-2"></i> Correo Electrónico
            </label>
            <input asp-for="Email" class="form-control" placeholder="Ingresa el correo electrónico" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- Username -->
        <div class="form-group mb-3">
            <label asp-for="UserName" class="d-flex align-items-center">
                <i class="fas fa-user-circle me-2"></i> Nombre de Usuario
            </label>
            <input asp-for="UserName" class="form-control" placeholder="Ingresa el nombre de usuario" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="form-group mb-3">
            <label asp-for="Password" class="d-flex align-items-center">
                <i class="fas fa-lock me-2"></i> Contraseña
            </label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Ingresa la nueva contraseña" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Confirm Password -->
        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword" class="d-flex align-items-center">
                <i class="fas fa-key me-2"></i> Confirmar Contraseña
            </label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Confirma la contraseña" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

   
    </form>
</div>
