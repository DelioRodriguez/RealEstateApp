@model RealEstateApp.Application.Dtos.Account.UserUpdateDTO

<style>
        .profile-picture {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .form-container {
            max-width: 700px;
            margin: 0 auto;
        }
        .form-section {
            margin-bottom: 20px;
        }
    </style>

<div class="container mt-5">
    <div class="form-container">
        <h1 class="text-center mb-4">Mi Perfil</h1>
        <form method="post" asp-action="Profile" asp-controller="Agent" enctype="multipart/form-data">
            <div class="form-section text-center">
                <img src="@Model.ImagenPath" alt="Foto de usuario" class="profile-picture">
                <div class="mt-3">
                    <label for="photo" class="form-label">Cambiar Foto</label>
                    <input type="file" class="form-control" id="photo" name="Photo">
                </div>
            </div>
            <div class="form-section">
                <label for="firstName" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="firstName" name="FirstName" value="@Model.FirstName">
            </div>
            <div class="form-section">
                <label for="lastName" class="form-label">Apellido</label>
                <input type="text" class="form-control" id="lastName" name="LastName" value="@Model.LastName">
            </div>
            <div class="form-section">
                <label for="phoneNumber" class="form-label">Teléfono</label>
                <input type="text" class="form-control" id="phoneNumber" name="PhoneNumber" value="@Model.PhoneNumber">
            </div>
            <div class="form-section">
                <label for="userName" class="form-label">Usuario</label>
                <input type="text" class="form-control" id="userName" name="UserName" value="@Model.UserName">
            </div>
            <div class="form-section">
                <label for="email" class="form-label">Correo Electrónico</label>
                <input type="email" class="form-control" id="email" name="Email" value="@Model.Email">
            </div>
            <div class="form-section">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="password" name="Password" value="@Model.Password">
            </div>
            <div class="form-section">
                <label for="confirmPassword" class="form-label">Confirmar Contraseña</label>
                <input type="password" class="form-control" id="confirmPassword" name="ConfirmPassword" value="@Model.ConfirmPassword">
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'success',
                    title: '¡Éxito!',
                    text: '@Html.Encode(TempData["SuccessMessage"]!.ToString())',
                    showConfirmButton: true,
                    timer: 5000
                });
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: '¡Error!',
                    text: '@Html.Encode(TempData["ErrorMessage"]!.ToString())',
                    showConfirmButton: true,
                    timer: 5000
                });
            </text>
        }
    </script>