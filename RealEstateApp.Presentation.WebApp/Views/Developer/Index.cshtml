@using RealEstateApp.Application.Dtos.Developer
@model IEnumerable<DeveloperDto>

<h2 class="mb-4 text-center text-primary">
    <i class="fas fa-users-cog"></i>
    <span>Listado de Desarrolladores</span>
</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="fas fa-plus-circle"></i>
    <span>Crear Desarrollador</span>
</a>

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="bg-primary text-white">
            <tr>
                <th><i class="fas fa-user"></i> <span>Nombre</span></th>
                <th><i class="fas fa-user-tag"></i> <span>Apellido</span></th>
                <th><i class="fas fa-user-lock"></i> <span>Nombre de Usuario</span></th>
                <th><i class="fas fa-envelope"></i> <span>Correo</span></th>
                <th><i class="fas fa-toggle-on"></i> <span>Estado</span></th>
                <th><i class="fas fa-cogs"></i> <span>Acciones</span></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var developer in Model)
            {
                <tr>
                    <td><i class="fas fa-user"></i> <span>@developer.FirstName</span></td>
                    <td><i class="fas fa-user-tag"></i> <span>@developer.LastName</span></td>
                    <td><i class="fas fa-user-lock"></i> <span>@developer.UserName</span></td>
                    <td><i class="fas fa-envelope"></i> <span>@developer.Email</span></td>
                    <td>
                        @if (developer.IsActive)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle"></i>
                                <span>Activo</span>
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="fas fa-times-circle"></i>
                                <span>Inactivo</span>
                            </span>
                        }
                    </td>
                    <td>
                        <div class="d-flex">
                            <!-- Activar/Inactivar -->
                            @using (Html.BeginForm("ToggleStatus", "Developer", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@developer.Id" />
                                <input type="hidden" name="status" value="@(developer.IsActive ? "false" : "true")" />
                                
                                <button type="submit" class="btn @(developer.IsActive ? "btn-warning" : "btn-success") btn-sm">
                                    @if (developer.IsActive)
                                    {
                                        <i class="fas fa-ban"></i>
                                        <span>Inactivar</span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-check"></i>
                                        <span>Activar</span>
                                    }
                                </button>
                            }

                            <!-- Editar -->
                            <a class="btn btn-info btn-sm ms-2" asp-action="Edit" asp-route-id="@developer.Id">
                                <i class="fas fa-edit"></i>
                                <span>Editar</span>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
