@model RealEstateApp.Application.ViewModels.Improvements.CreateImprovementViewModel

<h2 class="text-center text-primary mb-4">
    <i class="fas fa-tools"></i> Crear Nueva Mejora
</h2>

<form asp-action="Create" method="post">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Nombre -->
            <div class="form-group mb-3">
                <label for="Name" class="form-label">Nombre</label>
                <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre de la mejora" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Descripción -->
            <div class="form-group mb-3">
                <label for="Description" class="form-label">Descripción</label>
                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Ingresa una descripción detallada"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <!-- Botón Volver -->
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>

                <!-- Botón Crear -->
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-plus-circle"></i> Crear
                </button>
            </div>
        </div>
    </div>
</form>
