@model List<RealEstateApp.Application.ViewModels.Improvements.ImprovementsListViewModel>

@{
ViewData["Title"] = "Listado de Mejoras";
}

<h1 class="mb-4 text-center text-primary">
    <i class="fas fa-tools"></i> Mantenimiento de Mejoras
</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="fas fa-plus-circle"></i> Crear Nueva Mejora
</a>

<div class="row g-3">
    @foreach (var item in Model)
    {
    <div class="col-12 col-md-6 col-lg-4">
        <div class="card border-primary shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-tag"></i> @item.Name
                </h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <i class="fas fa-align-left"></i> <strong>Descripción:</strong> @item.Description
                </p>
            </div>
            <div class="card-footer bg-light d-flex justify-content-between">
                <!-- Botón Editar -->
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit"></i> Editar
                </a>

                <!-- Botón Eliminar -->
                <button type="button" class="btn btn-danger btn-sm ms-2" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación de Eliminación -->
    <div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@item.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel-@item.Id">
                        <i class="fas fa-exclamation-triangle"></i> Confirmar Eliminación
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Está seguro que desea eliminar la mejora <strong>@item.Name</strong>?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <form asp-action="DeleteConfi" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Confirmar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    }
</div>
