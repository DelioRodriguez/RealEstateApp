@model IEnumerable<RealEstateApp.Domain.Entities.Offer>
@{
ViewBag.Title = "Your Offers";
}

<h2 class="text-center mt-4">
    <i class="fas fa-handshake"></i> Your Offers
</h2>

<div class="table-responsive mt-4">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
        <tr>
            <th><i class="fas fa-calendar-alt"></i> Date</th>
            <th><i class="fas fa-dollar-sign"></i> Amount</th>
            <th><i class="fas fa-info-circle"></i> Status</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var offer in Model)
        {
        <tr>
            <td>@offer.Date.ToShortDateString()</td>
            <td>@offer.Amount.ToString("C")</td>
            <td>@offer.Status</td>
        </tr>
        }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("CreateOffer", "Offer", new { propertyId = ViewBag.PropertyId })"
       class="btn btn-primary btn-lg @(TempData["Error"] != null ? "disabled" : "")">
        <i class="fas fa-plus-circle"></i> Create Offer
    </a>
</div>

@if (TempData["Error"] != null)
{
<div class="alert alert-danger mt-4 text-center">
    <i class="fas fa-times-circle"></i> @TempData["Error"]
</div>
}
