@model int
@{
ViewBag.Title = "Create Offer";
}

<h2 class="text-center mt-4">
    <i class="fas fa-plus-circle"></i> Create Offer
</h2>

<form method="post" action="@Url.Action("CreateOffer", "Offer", new { propertyId = ViewBag.PropertyId })" class="mt-4">
    <div class="form-group">
        <label for="Ammount"><i class="fas fa-dollar-sign"></i> Cantidad </label>
        <input type="number" class="form-control" name="amount" step="100" required placeholder="Enter the offer amount" min="0" />
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-success btn-lg">
            <i class="fas fa-check-circle"></i> Submit
        </button>
    </div>
</form>



