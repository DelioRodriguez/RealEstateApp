@model RealEstateApp.Application.ViewModels.Properties.PropertyDetailViewModel

 <div class="container my-5">
        <div class="row">
            <!-- Slider de imágenes -->
            <div class="col-md-6">
                <div id="carouselPropiedad" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @foreach (var imageUrl in Model.ImageUrls)
                        {
                            <div class="carousel-item @(imageUrl == Model.ImageUrls.First() ? "active" : "")">
                                <img src="@imageUrl" class="d-block w-100" alt="Imagen de la propiedad">
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselPropiedad" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Anterior</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselPropiedad" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Siguiente</span>
                    </button>
                </div>
            </div>

            <div class="col-md-6">
                <h2>@Model.PropertyTypeName</h2>
                <p><strong>Código:</strong> @Model.Code</p>
                <p><strong>Tipo de Venta:</strong> @Model.SaleTypeName</p>
                <p><strong>Precio:</strong> @Model.Price.ToString("C")</p>
                <p><strong>Habitaciones:</strong> @Model.Rooms</p>
                <p><strong>Baños:</strong> @Model.Bathrooms</p>
                <p><strong>Tamaño:</strong> @Model.Size m²</p>
                <p><strong>Descripción:</strong> @Model.Description</p>

                <h5>Agente Inmobiliario</h5>
                <div class="d-flex align-items-center">
                    <img src="@Model.AgentImageUrl" class="rounded-circle me-3" alt="Foto del agente">
                    <div>
                        <p><strong>@Model.AgentName</strong></p>
                        <p><i class="bi bi-phone"></i> @Model.AgentPhone</p>
                        <p><i class="bi bi-envelope"></i> @Model.AgentEmail</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>