@model RealEstateApp.Application.ViewModels.Properties.PropertyDetailViewModel

<div class="container my-5">
    <div class="row gx-5">
        <!-- Sección de Imágenes -->
        <div class="col-lg-6">
            <div id="carouselPropiedad" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var imageUrl in Model.ImageUrls)
                    {
                    <div class="carousel-item @(imageUrl == Model.ImageUrls.First() ? "active" : "")">
                        <img src="@imageUrl" class="d-block w-100 rounded shadow-sm" alt="Imagen de la propiedad" style="height: 400px; object-fit: cover;">
                    </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselPropiedad" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Anterior</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselPropiedad" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Siguiente</span>
                </button>
            </div>
        </div>

        <!-- Sección de Detalles -->
        <div class="col-lg-6">
            <h2 class="mb-4 text-primary"><i class="bi bi-house-door-fill"></i> @Model.PropertyTypeName</h2>
            <ul class="list-unstyled">
                <li><i class="bi bi-barcode"></i> <strong>Código:</strong> @Model.Code</li>
                <li><i class="bi bi-currency-dollar"></i> <strong>Precio:</strong> @Model.Price.ToString("C")</li>
                <li><i class="bi bi-house-door"></i> <strong>Tipo de Venta:</strong> @Model.SaleTypeName</li>
                <li><i class="bi bi-bed"></i> <strong>Habitaciones:</strong> @Model.Rooms</li>
                <li><i class="bi bi-shower"></i> <strong>Baños:</strong> @Model.Bathrooms</li>
                <li><i class="bi bi-arrows-fullscreen"></i> <strong>Tamaño:</strong> @Model.Size m²</li>
                <li><i class="bi bi-file-earmark-text"></i> <strong>Descripción:</strong> @Model.Description</li>
                <li><i class="bi bi-gear"></i> <strong>Mejoras:</strong>
                    @if (Model.Improvements.Any())
                    {
                    <ul class="list-unstyled">
                        @foreach (var improvement in Model.Improvements)
                        {
                        <li><i class="bi bi-check-circle-fill"></i> @improvement.Name</li>
                        }
                    </ul>
                    }
                    else
                    {
                    <span><i class="bi bi-x-circle-fill"></i> No se han registrado mejoras.</span>
                    }
                </li>
            </ul>

            <!-- Agente Inmobiliario -->
            <h5 class="mt-5"><i class="bi bi-person-circle"></i> Agente Inmobiliario</h5>
            <div class="d-flex align-items-center border rounded p-3 shadow-sm mb-4">
                <img src="@Model.AgentImageUrl" class="rounded-circle me-3" alt="Foto del agente" style="width: 80px; height: 80px;">
                <div>
                    <p class="mb-1"><strong>@Model.AgentName</strong></p>
                    <p class="mb-1"><i class="bi bi-phone-fill"></i> @Model.AgentPhone</p>
                    <p class="mb-0"><i class="bi bi-envelope-fill"></i> @Model.AgentEmail</p>
                </div>
            </div>

           

            <!-- Botón Volver -->
            <div class="mt-4">
                <a asp-controller="Properties" asp-action="Index" class="btn btn-outline-primary w-100"><i class="bi bi-arrow-left-circle"></i> Volver atrás</a>
            </div>
        </div>
    </div>
</div>

<!-- Carga Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
