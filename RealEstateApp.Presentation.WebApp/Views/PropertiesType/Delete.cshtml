@model RealEstateApp.Application.ViewModels.PropertiesType.DeletePropertyTypeViewModel

@{
    ViewData["Title"] = "Eliminar Tipo de Propiedad";
}

<h1>Eliminar Tipo de Propiedad</h1>

<p>¿Está seguro que desea eliminar el tipo de propiedad <strong>@Model.Name</strong> y todas las propiedades asociadas a este tipo?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mt-3">
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
        <button type="submit" class="btn btn-danger">Aceptar</button>
    </div>
</form>
