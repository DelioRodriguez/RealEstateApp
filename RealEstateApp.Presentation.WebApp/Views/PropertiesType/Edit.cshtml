@model RealEstateApp.Application.ViewModels.PropertiesType.EditPropertyTypeViewModel

@{
    ViewData["Title"] = "Editar Tipo de Propiedad";
}

<h1 class="text-center text-primary mb-4">
    <i class="fas fa-edit"></i> @ViewData["Title"]
</h1>

<form asp-action="Edit" method="post">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Nombre -->
            <div class="form-group mb-3">
                <label for="Name" class="form-label">Nombre</label>
                <input asp-for="Name" class="form-control" id="Name" placeholder="Ingresa el nombre del tipo de propiedad" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Descripción -->
            <div class="form-group mb-3">
                <label for="Description" class="form-label">Descripción</label>
                <textarea asp-for="Description" class="form-control" id="Description" placeholder="Ingresa una descripción del tipo de propiedad" required></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Botones -->
            <div class="d-flex justify-content-between">
                <!-- Botón Volver -->
                <a href="@Url.Action("Index", "PropertyType")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>

                <!-- Botón Guardar -->
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
            </div>
        </div>
    </div>
</form>