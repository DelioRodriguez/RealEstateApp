@model RealEstateApp.Application.ViewModels.PropertiesType.EditPropertyTypeViewModel

@{
    ViewData["Title"] = "Editar Tipo de Propiedad";
}

<h1>Editar Tipo de Propiedad</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group mt-3">
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
