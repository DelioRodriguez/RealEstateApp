@model IEnumerable<RealEstateApp.Application.ViewModels.PropertiesType.PropertyTypeListViewModel>

@{
    ViewData["Title"] = "Mantenimiento de Tipos de Propiedades";
}

<h1>Mantenimiento de Tipos de Propiedades</h1>

<a class="btn btn-primary mb-3" asp-action="Create">Crear Tipo de Propiedad</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Cantidad de Propiedades</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.PropertiesCount</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
