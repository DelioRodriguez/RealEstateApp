@model RealEstateApp.Application.ViewModels.SaleType.UpdateSaleTypeViewModel

@{
    ViewData["Title"] = "Editar Tipo de Venta";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Name">Nombre</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required maxlength="50">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Descripción</label>
        <textarea class="form-control" id="Description" name="Description" required maxlength="200">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar Cambios</button>
    <a href="@Url.Action("Index", "SaleType")" class="btn btn-secondary">Volver</a>
</form>
